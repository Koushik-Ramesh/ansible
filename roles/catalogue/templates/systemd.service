[Unit]
Description = Catalogue Service
[Service]
User=roboshop
Environment=MONGO=true
Environment="mongodb://{{DOCDB_USERNAME}}:{{DOCDB_PASSWORD}}@mongodb-{{ENV}}.robosop.internal:27017/catalogue?tls=true&replicaSet=rs0&readPreference=secondaryPreferred&retryWrites=false"
ExecStart=/bin/node /home/roboshop/catalogue/server.js
SyslogIdentifier=catalogue

[Install]
WantedBy=multi-user.target

